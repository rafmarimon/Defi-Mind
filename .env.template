# DEFIMIND Configuration Template
# Copy this file to .env and fill in your actual values

# Agent Configuration
AGENT_USE_LLM=true
AGENT_NAME=DEFIMIND
AGENT_HOME=DEFIMIND
AGENT_CYCLE_INTERVAL=20
TOTAL_INVESTMENT=100
MAX_SINGLE_PROTOCOL_ALLOCATION=0.5
LOG_LEVEL=INFO

# LLM Provider Configuration
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=your-openrouter-api-key

# Blockchain RPCs
ETHEREUM_RPC_URL=your-ethereum-rpc-url
POLYGON_RPC_URL=your-polygon-rpc-url
INFURA_RPC_URL=your-infura-rpc-url

# API Keys
ALCHEMY_API_KEY=your-alchemy-api-key

# LangChain and LangSmith Configuration (optional)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=DeFiMind

# Deployment Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
DASHBOARD_BASE_URL= 